{
  "name": "relay",
  "productName": "Relay",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/main/index.js",
  "description": "Relay - Modern Data Dashboard",
  "author": "Relay Team",
  "license": "MIT",
  "scripts": {
    "dev": "ELECTRON_RUN_AS_NODE= electron-vite dev",
    "build": "electron-vite build",
    "build:win": "npm run build && electron-builder --win --x64 --config electron-builder.yml",
    "build:mac": "npm run build && electron-builder --mac --config electron-builder.yml",
    "release": "npm run build && electron-builder --win --x64 --publish always --config electron-builder.yml",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "dev:test": "vite --config vite.renderer.config.ts --port 4173",
    "preview:renderer": "npm run build:renderer && vite preview --config vite.renderer.config.ts --host --port 4173",
    "test": "npm run test:unit && npm run test:renderer",
    "test:electron": "playwright test -c playwright.electron.config.ts",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:renderer": "vitest run -c vitest.renderer.config.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource-variable/space-grotesk": "^5.2.10",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@formkit/auto-animate": "^0.9.0",
    "chokidar": "^5.0.0",
    "csv-parse": "^6.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-virtualized-auto-sizer": "^2.0.2",
    "react-window": "^2.2.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.5.3",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "^40.2.1",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^14.0.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.8.0",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
